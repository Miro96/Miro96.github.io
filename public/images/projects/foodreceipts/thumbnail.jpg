<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f0f1a;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="pinkGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff1493;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#ff69b4;stop-opacity:0.6" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="800" height="600" fill="url(#bgGradient)"/>

  <!-- Decorative circles -->
  <circle cx="100" cy="100" r="80" fill="url(#pinkGradient)" opacity="0.15"/>
  <circle cx="700" cy="500" r="100" fill="url(#pinkGradient)" opacity="0.15"/>
  <circle cx="600" cy="150" r="60" fill="url(#pinkGradient)" opacity="0.1"/>

  <!-- Recipe card icon -->
  <rect x="200" y="150" width="400" height="300" rx="20" fill="#0a0a0a" stroke="#ff1493" stroke-width="3" opacity="0.8"/>

  <!-- Recipe lines -->
  <rect x="240" y="200" width="320" height="20" rx="10" fill="#ff1493" opacity="0.4"/>
  <rect x="240" y="240" width="280" height="15" rx="8" fill="#ff1493" opacity="0.3"/>
  <rect x="240" y="270" width="300" height="15" rx="8" fill="#ff1493" opacity="0.3"/>

  <!-- Shopping cart icon -->
  <circle cx="520" cy="360" r="40" fill="#ff1493" opacity="0.6"/>
  <text x="520" y="375" font-family="Arial, sans-serif" font-size="40" fill="#fff" text-anchor="middle">🛒</text>

  <!-- Food emoji -->
  <text x="280" y="385" font-family="Arial, sans-serif" font-size="60" fill="#fff" text-anchor="middle">🍽️</text>

  <!-- AI sparkles -->
  <text x="440" y="210" font-family="Arial, sans-serif" font-size="30" fill="#ff1493" text-anchor="middle">✨</text>

  <!-- Title -->
  <text x="400" y="520" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="#ff1493" text-anchor="middle">FoodReceipts</text>
  <text x="400" y="560" font-family="Arial, sans-serif" font-size="24" fill="#fff" text-anchor="middle" opacity="0.8">AI-Powered Recipe Platform</text>
</svg>
